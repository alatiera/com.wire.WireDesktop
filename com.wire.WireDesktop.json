{
  "app-id": "com.wire.WireDesktop",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "19.08",
  "command": "wire-desktop",
  "rename-desktop-file": "wire-desktop.desktop",
  "rename-icon": "wire-desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11",
    "--talk-name=com.canonical.AppMenu.Registrar",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.portal.Fcitx",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "libsecret",
      "buildsystem": "meson",
      "config-opts": [
        "-Dgtk_doc=false",
        "-Dmanpage=false",
        "-Dvapi=false"
      ],
      "sources": [
        {
          "type": "git",
          "commit": "f576dfbe50f9aed22802ad0db0356d081f467d7a",
          "tag": "0.19.1",
          "url": "https://gitlab.gnome.org/GNOME/libsecret.git"
        }
      ]
    }, {
      "name": "wire-desktop",
      "buildsystem": "simple",
      "build-commands": [
        "ar -o -x Wire-3.11.2912_amd64.deb",
        "tar --extract --file=data.tar.xz",
        "cp --preserve --recursive opt/* usr/* /app",
        "desktop-file-edit --set-key=Exec --set-value=\"/app/bin/wire-desktop %U\" /app/share/applications/wire-desktop.desktop",
        "install -D --mode=0755 entrypoint.sh /app/bin/wire-desktop",
        "install -D --mode=0644 --target-directory=/app/share/metainfo/ com.wire.WireDesktop.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "sha256": "540fbe94161ea52e7406b8df94842eae4abe22707f5baab7680d94d346505cb4",
          "url": "https://github.com/wireapp/wire-desktop/releases/download/linux/3.11.2912/Wire-3.11.2912_amd64.deb"
        }, {
          "type": "file",
          "sha256": "41ddbf18e2581d7850a0d2cd22b5d2fcc07a778227e36280af55c5e72d7ee942",
          "url": "https://github.com/wireapp/wire-desktop/archive/linux/3.11.2912.tar.gz"
        }, {
          "type": "file",
          "path": "entrypoint.sh"
        }, {
          "type": "file",
          "path": "com.wire.WireDesktop.appdata.xml"
        }
      ]
    }
  ]
}
